<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DiscoveryFragment">

    <ImageView
        android:id="@+id/ivBackgroundDiscover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_cropped" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStreams"
        android:layout_width="match_parent"
        android:layout_height="587dp"

        android:layout_below="@+id/sDropdown"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Spinner
        android:id="@+id/sDropdown"
        android:layout_width="148dp"
        android:layout_height="35dp"
        android:layout_below="@+id/etInput"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/bg_accent_button"
        android:spinnerMode="dropdown" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etInput"
        android:layout_width="410dp"
        android:layout_height="60dp"

        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#222222"
        android:hint="Search"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#555555"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_search" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="D I S C O V E R Y"
        android:textColor="@color/accent"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="105dp"
        android:text="Discover new livestreams here."
        android:textColor="@color/accent"
        android:textSize="12sp"
        android:textStyle="bold|italic" />
</RelativeLayout>



